<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>報告日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= report.reported %></td>
        <td><%= link_to '表示', report %></td>
        <td><%= link_to '編集', edit_report_path(report) %></td>
        <td><%= link_to '削除', report, method: :delete, data: { confirm: 'ほんまに?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_report_path %>
