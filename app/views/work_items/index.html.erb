<p id="notice"><%= notice %></p>

<h1>Work Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_items.each do |work_item| %>
      <tr>
        <td><%= work_item.name %></td>
        <td><%= work_item.label %></td>
        <td><%= link_to '表示', work_item %></td>
        <td><%= link_to '編集', edit_work_item_path(work_item) %></td>
        <td><%= link_to '削除', work_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

